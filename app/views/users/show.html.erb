<% @page_title = "UserAuth | Signup" -%>
<div class= "Sign_Form">
  <h1>Sign Up</h1>
  <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>

    <p>          
      Username:</br> <%= f.text_field :username%>
    </p>

    <p>
      Email:</br> <%= f.text_field :email_id%>
    </p>

    <p>      
      Password:</br> <%= f.password_field :encrypted_password%>
    </p>

	<p>      
      Address:</br> <%= f.text_field :address%>
    </p>
    <p>      
      Phone:</br> <%= f.text_field :phone_no%>
    </p>
  	
     
    

    <%= f.submit :Signup %>
  <% end %>

  </div>
